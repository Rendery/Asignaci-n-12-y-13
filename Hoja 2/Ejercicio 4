#include <iostream>
#include <conio.h>
#include <math.h>

using namespace std;

int main()
{
	int holis, V, num;

	cout << "Ingrese valor V: " << endl;
	cin >> V; 
	cout << "Ingrese valor num: " << endl;
	cin >> num; 
	
	if (num == 1)
	{
		holis = 100 * V;
	}
	else
	if (num == 2)
	{
		holis = pow(100,V);
	}
	else
	if (num == 3)
	{
		holis = 100 / V;
	}
	else
	{
		holis == 0;
	}

	cout << "Resultado = " << holis;
	_getch();
}
