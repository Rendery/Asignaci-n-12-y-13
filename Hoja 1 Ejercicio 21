#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	double monto;
	cout << "Ingrese el monto del prÃ©stamo en $: " << endl;
	cin >> monto;

	if (monto > 0)
	{
		if (monto < 5000)
		{
			monto = monto * 103 / 100.00;
		}
		else
		if ((monto >= 5000) && (monto <= 10000))
		{
			monto = monto * 102 / 100.00;
		}
		else
		{
			monto = monto * 101 / 100.00;
		}
			cout << "El monto total a pagar es de " << monto << endl;
	}
	else
	{
		cout << "error";
	}
	_getch();
}
