#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	int num;
	cout << "Ingrese el numero: " << endl;
	cin >> num;

	if ((num >= 1) && (num <= 100))
	{
		if ((num >= 1) && (num <= 9))
		{
			cout << "El numero tiene 1 digito";
		}
		if ((num >= 10) && (num <= 99))
		{
			cout << "El numero tiene 2 digitos";
		}
		if ((num >= 100) && (num <= 999))
		{
			cout << "El numero tiene 3 digitos";
		}
	}
	else
	{
		cout << "numero incorrecto";
	}
	_getch();
}
