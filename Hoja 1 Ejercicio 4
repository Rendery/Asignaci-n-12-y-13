#include <iostream>
#include <conio.h>
using namespace std;
int main()
{
	int edad,precio;
	cout << "Ingrese la edad de la persona: " << endl;
	cin >> edad;
	if (edad > 0)
	{
		if (edad < 18) 
		{
			precio = 7;
		}
		if ((edad >= 18) && (edad <= 50))
		{
			precio = 15;
		}
		if (edad > 50)
		{
			precio = 5;
		}
	cout << "El precio de la entrada es de " << precio << " soles" << endl;
	}
	else
	{
		cout << "tu edad no existe :c " << endl;
	}
	_getch();
}
